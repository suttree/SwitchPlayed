<% [:error, :warning, :notice].each do |level|
    if flash[level] -%>
      <div class="flash <%= level.to_s -%>" id="<%= level.to_s -%>"><%= flash[level] -%></div>
      <script type="text/javascript">
        setTimeout("new Effect.Fade('<%= level.to_s -%>');", 2000)
      </script>
  <% end -%>
<% end -%>
